{
  "compilerOptions": {
    "allowJs": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@decorators": ["./decorators/index.ts"],
      "@utils": ["./utils/index.ts"]
    },
    "lib": ["es2016"]
  }
}
