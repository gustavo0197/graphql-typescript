{
  "compilerOptions": {
    "allowJs": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": ["es2016"],
    "declaration": true
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
